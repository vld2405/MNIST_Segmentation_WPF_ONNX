<Window x:Class="ONNXSegmentationWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ONNXSegmentationWPF.ViewModels"
        Title="ONNX Inference" Height="600" Width="800">
    <Window.DataContext>
        <vm:MainVM />
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Upload" Command="{Binding UploadCommand}" Width="100" Margin="10,0"/>
            <Button Content="Submit" Command="{Binding SubmitCommand}" Width="100" Margin="10,0"/>
        </StackPanel>

        <Image Grid.Row="1" Grid.Column="0" Source="{Binding InputImage}" Stretch="Uniform" Margin="10" />
        <Image Grid.Row="1" Grid.Column="1" Source="{Binding OutputImage}" Stretch="Uniform" Margin="10" />
    </Grid>
</Window>
